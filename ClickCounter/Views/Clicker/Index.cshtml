@model ClickCounter.Models.ClickCounterModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm("Count", "Clicker", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.Count)
            <button id="addCount_btn">Increment</button>
            <span>@Model.Count</span>
            <br />
            @Html.ValidationMessageFor(x => x.Count)
        }
    </div>
</body>
</html>
